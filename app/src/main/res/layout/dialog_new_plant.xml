<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Setup Type"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:text="Has this HelioPot previously been set up? Or would you like to run the set up process?"
            android:textColor="@android:color/primary_text_light_nodisable"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_minor_setup"
            style="@style/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startMinorSetup"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="Yes. Just add the existing HelioPot" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <Button
            android:id="@+id/button_full_setup"
            style="@style/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startFullSetup"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="No. Run the full setup process" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <Button
            android:id="@+id/button_cancel"
            style="@style/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="@android:string/cancel" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>